{
  "name": "erp-afirma",
  "version": "1.0.0",
  "description": "Sistema ERP Afirma - Gesti√≥n integral de empleados y recursos humanos.",
  "main": "src/js/app.js",
  "scripts": {
    "start": "npm run server",
    "start:dev": "live-server src --port=8082 --host=127.0.0.1",
    "start:frontend": "npm run frontend",
    "api": "node server/api.js",
    "frontend": "node server/frontend.js",
    "server": "node server/index.js",
    "dev": "nodemon server/index.js",
    "dev:all": "concurrently \"npm:api\" \"npm:start:dev\"",
    "migrate": "node server/migrate.js",
    "seed:catalogs": "node server/seeds/seed_catalogs.js",
    "build": "echo 'Static files ready for deployment'",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "docker:build": "docker build -t erp-afirma .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:heroku": "git push heroku main",
    "test": "echo 'No tests defined'"
  },
  "keywords": [
    "erp",
    "afirma",
    "employee",
    "management",
    "recursos humanos",
    "web",
    "application"
  ],
